<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    style="@style/CustomEditTextStyle"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginStart="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">



        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profile_picture"
            android:layout_gravity="end"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="Profile Image"
            android:outlineSpotShadowColor="@color/black"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_placeholder"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Image.Circle"
            android:padding="8dp" />


        <TextView
            android:id="@+id/user_full_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre Apellido"
            android:textSize="16sp"
            android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/review_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripci칩n de la rese침a"
            android:textSize="14sp" />

        <RatingBar
            android:id="@+id/review_rating"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:progressTint="@color/rojo1"
            android:scaleX="0.3"
            android:scaleY="0.3"
            android:isIndicator="true"
            android:numStars="5"
            android:stepSize="0.5"
            android:rating="4.5" />

        <TextView
            android:id="@+id/review_timestamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hace 2 horas"
            android:textSize="12sp"
            android:textColor="@color/gray" />

        <LinearLayout
            android:id="@+id/action_button_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/edit_review_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_edit"
                android:contentDescription="Editar rese침a"
                android:layout_marginEnd="8dp" />

            <ImageView
                android:id="@+id/delete_review_button"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete"
                android:contentDescription="Eliminar rese침a"
                app:tint="@color/rojo1" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
